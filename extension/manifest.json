{
  "manifest_version": 3,
  "name": "Sahibinden Scraper",
  "version": "1.0",
  "description": "Sahibinden.com veri çekici - Bridge ile iletişim",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.sahibinden.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.sahibinden.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
