{
  "manifest_version": 3,
  "name": "Sahibinden Scraper",
  "version": "1.1",
  "description": "Sahibinden.com veri cekici - Bridge ile iletisim",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://www.sahibinden.com/*",
    "http://localhost:8766/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.sahibinden.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
